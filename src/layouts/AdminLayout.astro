---
import "@fontsource/inter/100.css";
import "@fontsource/inter/200.css";
import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";
import AdminHeader from "../components/AdminHeader.astro";
import AdminSidebar from "../components/AdminSidebar.astro";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <AdminHeader />
    <div class="flex">
        <div class="w-1/3 sm:w-1/4">
            <AdminSidebar />
        </div>
        <div class="w-2/3 sm:w-3/4">
            <div class=" flex align-middle justify-center h-16 sm:h-14 font-bold p-2 py-6 mb-3 sm:mb-0">
              <p class="text-lg">{title}</p>
            </div>
            <slot />
        </div>
    </div>
    
    
    <style is:global>
      * {

      }
      img {
        content-visibility: auto;
      }
      body {
        font-family: "Inter", sans-serif;
        font-size: 16px;
        line-height: normal;
        background-color: #000000;
        background: #F5F5F5;
        overflow-x: hidden;
      }
    </style>
  </body>
</html>